        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical|left"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_history_black_48dp"/>

                    <ImageView
                        android:id="@+id/userEdit"
                        android:layout_width="60dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right|center_vertical"
                        android:foregroundTint="@color/colorAccent"
                        android:padding="8dp"
                        android:src="@drawable/ic_mode_edit_black_48dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">


                    <ImageView
                        android:id="@+id/batIndicator"
                        android:layout_width="28dp"
                        android:layout_height="17dp"
                        android:layout_gravity="top"
                        android:src="@drawable/bat1"/>


                    <TextView
                        android:id="@+id/batteryLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="2dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:text="100%"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="10sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cellServiceIndicator"
                        android:layout_width="28dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/sig_full"
                        />

                    <TextView
                        android:id="@+id/cellService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="2dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:text="Good"
                        android:textColor="@android:color/secondary_text_light"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>


